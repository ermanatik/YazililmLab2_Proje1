@model List<YazilimLab2_Proje1.Models.Ogrenciler> // Ogrenci modelini kullanacağımızı belirtiyoruz

@{
    ViewData["Title"] = "Öğrenciler";
}

<h1>Öğrenciler</h1>

@if (Model.Count == 0)
{
    <p>Öğrenci bulunamadı.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Öğrenci ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Doğum Yeri</th>
                <th>Doğum Tarihi</th>
                <th>Şehir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ogrenci in Model)
            {
                <tr>
                    <td>@ogrenci.Ogrenci_id</td>
                    <td>@ogrenci.Ogrenci_ad</td>
                    <td>@ogrenci.Ogrenci_soyad</td>
                    <td>@ogrenci.Ogrenci_dogum_yeri</td>
                    <td>@ogrenci.Ogrenci_dogum_tarihi.ToShortDateString()</td>
                    <td>@ogrenci.Ogrenci_sehir</td>
                </tr>
            }
        </tbody>
    </table>
}
